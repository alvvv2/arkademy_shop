<section class="section">
  <p id="notice"><%= notice %></p>

  <div class="container">
    <h1 class="title">Products</h1>
    <h2 class="subtitle">
      Simple products index page
    </h1>

    <table class="table is-bordered is-hoverable is-fullwidth is-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Product</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %> </td>
            <td><%= product.name %> </td>
            <td>
              <div class="field is-grouped">
                <p class="control">
                  <button class="button is-small is-info is-light is-outlined"><%= link_to 'Show', product %>
                </p>
                <p class="control">
                  <button class="button is-small is-warning is-light is-outlined"><%= link_to 'Edit', edit_product_path(product) %>
                </p>
                <p class="control">
                  <button class="button is-small is-danger is-light is-outlined"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>

      <tfoot>
        <tr>
            <th>ID</th>
            <th>Product</th>
            <th>Actions</th>
          </tr>
      </tfoot>
    </table>

    <div class="container mt-5">
      <button class="button is-success is-rounded is-focused><%= link_to 'New Product', new_product_path %>
    </div>
  </div>
</section>
